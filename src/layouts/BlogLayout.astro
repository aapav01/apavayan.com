---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { ArrowLeft } from '@lucide/astro';

interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
}

const { title, description, date, category } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Apavayan Sinha" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title} | Apavayan Sinha</title>

    <!-- Dark mode script -->
    <script is:inline>
      if(localStorage.theme==='dark'||(!('theme' in localStorage)&&matchMedia('(prefers-color-scheme:dark)').matches))document.documentElement.classList.add('dark');
    </script>
  </head>
  <body class="min-h-screen bg-neutral-50 text-neutral-900 dark:bg-neutral-950 dark:text-neutral-1000 font-sans antialiased">
    <Header />
    <main class="max-w-3xl mx-auto px-4 py-16">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-sm text-neutral-500 dark:text-neutral-400 hover:text-accent-600 dark:hover:text-accent-400 mb-8 transition-colors"
      >
        <ArrowLeft class="w-4 h-4" />
        Back to Archive
      </a>

      <article>
        <header class="mb-8">
          <div class="flex items-center gap-3 text-sm text-neutral-500 dark:text-neutral-400 mb-3">
            <span class="px-2 py-1 bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-400 rounded text-xs font-medium">
              {category}
            </span>
            <time datetime={date}>{formattedDate}</time>
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white leading-tight">
            {title}
          </h1>
        </header>

        <div class="prose prose-gray dark:prose-invert max-w-none prose-headings:font-semibold prose-a:text-accent-600 dark:prose-a:text-accent-400 prose-img:rounded-lg">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
