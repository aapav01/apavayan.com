---
import { personal } from '../../data/personal';
import { MapIcon as Location } from '@lucide/astro';
---

<section id="about" class="py-16 scroll-mt-20">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">About Me</h2>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="md:col-span-2">
        <p class="text-neutral-500 dark:text-neutral-400 leading-relaxed mb-6">
          {personal.bio}
        </p>
        <p class="text-neutral-500 dark:text-neutral-400 leading-relaxed">
          I'm passionate about building systems that scale and mentoring developers.
          Currently focused on AI/ML integrations, microservices architecture, and
          contributing to open-source government platforms.
        </p>
      </div>

      <div class="space-y-6">
        <div>
          <h3 class="font-semibold text-sm uppercase tracking-wide text-neutral-500 dark:text-neutral-400 mb-3">
            Location
          </h3>
          <p class="flex items-center gap-2 text-neutral-500 dark:text-neutral-400">
            <Location class="w-4 h-4" />
            {personal.location}
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-sm uppercase tracking-wide text-neutral-500 dark:text-neutral-400 mb-3">
            Education
          </h3>
          <div class="space-y-3">
            {personal.education.map(edu => (
              <div>
                <p class="font-medium text-neutral-900 dark:text-neutral-1000 text-sm">{edu.degree}</p>
                <p class="text-sm text-neutral-500 dark:text-neutral-400">{edu.institution}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
