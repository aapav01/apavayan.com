---
import { personal } from '../../data/personal';
import { Github } from '@lucide/astro';
import { Linkedin } from '@lucide/astro';
import { Mail as Email } from '@lucide/astro';
---

<section class="relative py-20 md:py-32 overflow-hidden">
  <!-- Animated Gradient Background -->
  <div class="absolute inset-0 gradient-bg -z-10"></div>

  <div class="max-w-5xl mx-auto px-4 relative">
    <p class="text-primary-600 dark:text-primary-500 font-medium mb-2 text-lg">Hi, I'm</p>
    <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">
      {personal.name}
    </h1>
    <p class="text-xl md:text-2xl text-neutral-900 dark:text-neutral-1000 mb-4">
      {personal.title} <span class="text-neutral-400 dark:text-neutral-500">|</span> {personal.subtitle}
    </p>
    <p class="max-w-2xl text-lg text-neutral-900 dark:text-neutral-1000 mb-8">
      {personal.tagline}
    </p>

    <div class="flex flex-wrap items-center gap-4">
      <a
        href="#contact"
        class="inline-flex items-center px-6 py-3 bg-primary-600 dark:bg-primary-500 text-white dark:text-neutral-900 font-medium rounded-lg hover:bg-primary-700 dark:hover:bg-primary-600 transition-colors"
      >
        Get in Touch
      </a>
    </div>

    <div class="flex items-center gap-4 mt-8">
      <a
        href={personal.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-neutral-900 hover:text-primary-600 dark:text-neutral-1000 dark:hover:text-primary-500 transition-colors"
        aria-label="GitHub"
      >
        <Github class="w-6 h-6" />
      </a>
      <a
        href={personal.links.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-neutral-900 hover:text-primary-600 dark:text-neutral-1000 dark:hover:text-primary-500 transition-colors"
        aria-label="LinkedIn"
      >
        <Linkedin class="w-6 h-6" />
      </a>
      <a
        href={`mailto:${personal.email}`}
        class="text-neutral-900 hover:text-primary-600 dark:text-neutral-1000 dark:hover:text-primary-500 transition-colors"
        aria-label="Email"
      >
        <Email class="w-6 h-6" />
      </a>
    </div>
  </div>
</section>
