---
import { projects } from '../../data/projects';
import { Github } from '@lucide/astro';
import { ExternalLink } from '@lucide/astro';
---

<section id="projects" class="py-16 scroll-mt-20 bg-gray-50 dark:bg-gray-900/50">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Projects</h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map(project => (
        <article class="flex flex-col p-5 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800 hover:border-gray-300 dark:hover:border-gray-700 transition-colors">
          <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100 mb-2">
            {project.name}
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 grow">
            {project.description}
          </p>

          <ul class="flex flex-wrap gap-2 mb-4">
            {project.technologies.slice(0, 4).map(tech => (
              <li class="px-2 py-0.5 text-xs bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded">
                {tech}
              </li>
            ))}
          </ul>

          <div class="flex items-center gap-3 pt-3 border-t border-gray-100 dark:border-gray-800">
            {project.github && (
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1.5 text-sm text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
              >
                <Github class="w-4 h-4" />
                Code
              </a>
            )}
            {project.demo && (
              <a
                href={project.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1.5 text-sm text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
              >
                <ExternalLink class="w-4 h-4" />
                Demo
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
