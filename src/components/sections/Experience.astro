---
import { experience } from '../../data/experience';
import { ExternalLink } from '@lucide/astro';
---

<section id="experience" class="py-16 scroll-mt-20">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Experience</h2>

    <div class="relative border-l-2 border-gray-200 dark:border-gray-800 pl-8 space-y-10">
      {experience.map((job, index) => (
        <div class="relative">
          <!-- Timeline dot -->
          <div class="absolute -left-10.25 w-4 h-4 bg-brand-600 dark:bg-brand-500 rounded-full border-4 border-white dark:border-gray-950" />

          <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">
            {job.period}
          </div>

          <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100">
            {job.title}
          </h3>

          <p class="text-gray-600 dark:text-gray-400 mb-3">
            {job.companyUrl ? (
              <a
                href={job.companyUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-brand-600 dark:hover:text-brand-500 inline-flex items-center gap-1 transition-colors"
              >
                {job.company}
                <ExternalLink class="w-3 h-3" />
              </a>
            ) : (
              job.company
            )}
            <span class="text-gray-400 dark:text-gray-600 mx-2">|</span>
            {job.location}
          </p>

          <ul class="space-y-2">
            {job.highlights.map(highlight => (
              <li class="flex gap-3 text-sm text-gray-600 dark:text-gray-400">
                <span class="text-brand-600 dark:text-brand-500 shrink-0">-</span>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
