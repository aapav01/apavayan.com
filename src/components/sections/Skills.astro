---
import { skills } from '../../data/skills';
---

<section id="skills" class="py-16 scroll-mt-20 bg-gray-50 dark:bg-gray-900/50">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Skills</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {Object.entries(skills).map(([category, items]) => (
        <div class="p-5 bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-800">
          <h3 class="font-semibold text-lg mb-4 text-gray-900 dark:text-gray-100">
            {category}
          </h3>
          <ul class="flex flex-wrap gap-2">
            {items.map(skill => (
              <li class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full">
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
