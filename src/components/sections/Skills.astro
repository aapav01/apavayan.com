---
import { skills } from '../../data/skills';
---

<section id="skills" class="py-16 scroll-mt-20 bg-neutral-100 dark:bg-neutral-800">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-8">Skills</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {Object.entries(skills).map(([category, items]) => (
        <div class="p-5 bg-neutral-50 dark:bg-neutral-950 rounded-xl border border-neutral-200 dark:border-neutral-600">
          <h3 class="font-semibold text-lg mb-4 text-neutral-900 dark:text-neutral-1000">
            {category}
          </h3>
          <ul class="flex flex-wrap gap-2">
            {items.map(skill => (
              <li class="px-3 py-1 text-sm bg-neutral-200 dark:bg-neutral-600 text-neutral-500 dark:text-neutral-400 rounded-full">
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
